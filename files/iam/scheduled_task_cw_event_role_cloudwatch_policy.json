{
  "Version": "2012-10-17",
  "Statement": [
      {
          "Effect": "Allow",
          "Action": "ecs:RunTask",
          "Resource": "${event_target_ecs_target_task_definition_arn}",
          "Condition": {
              "ArnLike": {
                  "ecs:cluster": "${ecs_cluster_arn}",
              }
          }
      },
      {
          "Effect": "Allow",
          "Action": "iam:PassRole",
          "Resource": "*",
          "Condition": {
              "StringLike": {
                  "iam:PassedToService": "ecs-tasks.amazonaws.com"
              }
          }
      }
  ]
}
